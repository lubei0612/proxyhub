# ============================================
# ProxyHub 生产环境配置模板
# ============================================
# 使用说明：部署到服务器时，将此文件复制为 .env 并填入真实配置

# --------------------------------------------
# 1. Node Environment
# --------------------------------------------
NODE_ENV=production
LOG_LEVEL=info

# --------------------------------------------
# 2. Server Configuration  
# --------------------------------------------
PORT=3000
API_PREFIX=/api/v1

# --------------------------------------------
# 3. Database Configuration (PostgreSQL)
# --------------------------------------------
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=YOUR_STRONG_POSTGRES_PASSWORD_HERE
DATABASE_NAME=proxyhub
DATABASE_SYNC=false

# --------------------------------------------
# 4. Redis Configuration
# --------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# --------------------------------------------
# 5. JWT Authentication Configuration
# --------------------------------------------
# ⚠️ 重要：生产环境必须替换为强随机密钥（至少32字符）
# 生成命令: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=REPLACE_WITH_YOUR_STRONG_JWT_SECRET_48_CHARS_MIN
JWT_EXPIRES_IN=2h
JWT_REFRESH_EXPIRES_IN=7d

# --------------------------------------------
# 6. 985Proxy API Configuration
# --------------------------------------------
PROXY_985_API_KEY=YOUR_985PROXY_API_KEY_HERE
PROXY_985_BASE_URL=https://open-api.985proxy.com
PROXY_985_ZONE=YOUR_ZONE_ID_HERE
PROXY_985_TEST_MODE=false

# --------------------------------------------
# 7. Email Service Configuration (Primary)
# --------------------------------------------
MAIL_HOST=smtp.office365.com
MAIL_PORT=587
MAIL_USER=YOUR_EMAIL@outlook.com
MAIL_PASSWORD=YOUR_EMAIL_PASSWORD
MAIL_FROM=ProxyHub <noreply@proxyhub.com>

# --------------------------------------------
# 8. Backup Email Service Configuration (Gmail)
# --------------------------------------------
MAIL_HOST_BACKUP=smtp.gmail.com
MAIL_PORT_BACKUP=587
MAIL_USER_BACKUP=YOUR_BACKUP_EMAIL@gmail.com
MAIL_PASSWORD_BACKUP=YOUR_GMAIL_APP_PASSWORD

# --------------------------------------------
# 9. Telegram Bot Configuration (Optional)
# --------------------------------------------
# TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN
# TELEGRAM_BOT_USERNAME=YOUR_BOT_USERNAME

# --------------------------------------------
# 10. Frontend Configuration
# --------------------------------------------
FRONTEND_URL=https://yourdomain.com

# --------------------------------------------
# 11. CORS Configuration (生产环境必须配置)
# --------------------------------------------
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

